<Window x:Class="GamesLuncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamesLuncher"
        mc:Ignorable="d"
        Title="GamesLuncher" Height="300" Width="300"
        SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="TicTacToe Console" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Row="0" Margin="5,5,5,5" Click="TicTacToeConsole_Click"/>
        <Button Content="TicTacToe Window" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Row="1" Margin="5,5,5,5" Click="TicTacToeWindow_Click"/>
        <Button Content="Draughts Console" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Row="2" Margin="5,5,5,5" Click="DraughtsConsole_Click"/>
    </Grid>
</Window>
